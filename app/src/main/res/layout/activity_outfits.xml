<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tus_outfits"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/black"
        android:padding="16dp">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/closet_icon"
            android:contentDescription="@string/closet_virtual" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/closet_virtual"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnUser"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/user_iconn"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/usaurio" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTusOutfits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TUS OUTFITS"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/llListaOutfits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tvOutfitCasual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CASUAL DIARIO"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"
            android:drawablePadding="8dp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvOutfitInvierno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OUTFIT DE INVIERNO"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"
            android:drawablePadding="8dp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvOutfitElegante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ELEGANTE"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"
            android:drawablePadding="8dp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvOutfitFormalComodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FORMAL Y CÃ“MODO"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"
            android:drawablePadding="8dp"
            android:padding="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnCrearOutfit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREAR UN NUEVO OUTFIT"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:layout_gravity="center"
        android:layout_marginTop="250dp" />

</LinearLayout>